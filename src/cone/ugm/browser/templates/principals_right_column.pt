<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.ugm"
           omit-tag="True">

  <div class="card column right_column bg-primary-100">
    <h5 class="card-header" tal:content="context.title"></h5>

    <div class="card-body">
      <div class="go_to_principal btn btn-primary text-light mb-3"
            tal:condition="context.principal_id"
            ajax:bind="click"
            ajax:target="${context.principal_target}"
            ajax:action="content:.columns:replace">
        <span tal:content="context.to_principal"></span>
        <span class="bi-caret-right"></span>
      </div>

      <span
        tal:condition="not context.principal_id"
        tal:content="context.no_principal"
      >
      </span>
      <div class="principal_form" tal:condition="context.principal_id">
        <tal:form replace="structure context.principal_form" />
      </div>
    </div>
  </div>

</tal:block>
