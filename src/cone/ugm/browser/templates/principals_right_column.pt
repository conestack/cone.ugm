<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.ugm"
           omit-tag="True">

  <div class="card column right_column bg-primary-100">
    <div class="principal_form">
      <tal:form condition="context.principal_id" replace="structure context.principal_form" />

      <div tal:condition="not context.principal_id">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="m-0" tal:content="context.header_title"></h5>
        </div>
        <div class="card-body">
          <span tal:content="context.no_principal"/>
        </div>
      </div>
    </div>
  </div>

</tal:block>
