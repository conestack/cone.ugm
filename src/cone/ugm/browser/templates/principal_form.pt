<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:ajax="http://namespaces.conestack.org/ajax"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.ugm"
           omit-tag="True">

  <div class="principal_form">

    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="m-0" tal:content="context.header_title"></h5>
      <div class="go_to_principal btn btn-primary text-light"
           tal:condition="context.principal_id"
           ajax:bind="click"
           ajax:target="${context.principal_target}"
           ajax:action="content:.columns:replace">
        <span tal:content="context.to_principal"></span>
        <span class="bi-caret-right"></span>
      </div>
      <div class="go_to_principal btn btn-primary text-light"
           tal:condition="not context.principal_id and context.name == 'editform'"
           ajax:bind="click"
           ajax:target="${context.principals_target}"
           ajax:action="content:.columns:replace">
        <span tal:content="context.to_principals"></span>
        <span class="bi-caret-left"></span>
      </div>
    </div>

    <div class="card-body">
      <tal:form replace="structure context.rendered_form" />
    </div>

  </div>

</tal:block>