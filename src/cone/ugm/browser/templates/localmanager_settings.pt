<tal:block xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:i18n="http://xml.zope.org/namespaces/i18n"
           i18n:domain="cone.ugm"
           omit-tag="True">
  <div class="settings-form">

    <h1 tal:content="context.form_heading">Title</h1>

    <tal:disabled condition="not model.enabled">
      <div class="warning">
        <strong i18n:translate="localmanager_disabled_warning">
          Local User Management is not enabled.
        </strong>
      </div>
    </tal:disabled>

    <tal:enabled condition="model.enabled">
      <tal:form replace="structure context.rendered_form" />
    </tal:enabled>

  </div>
</tal:block>